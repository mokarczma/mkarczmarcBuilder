@model BuilderApp.ViewModel.AccountCustomerViewModel

@{
    ViewBag.Title = "LoginCustomer";
}

<h2>Logowanie</h2>


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginForm", @name = "loginForm" }))
{

    <div class="form-horizontal">
        <h4>Podaj swój login i hasło</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.login, new { type = "text", htmlAttributes = new { @class = "field", placeholder = "Login" } })
                    @Html.ValidationMessageFor(model => model.login)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "field", placeholder = "Hasło" } })
                    @Html.ValidationMessageFor(model => model.password)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zaloguj" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
